<% require 'pry' %>
    <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="signup-form">
    <%= form_for(@user) do |f|  %>
		<h2>Sign Up</h2>
		<p>Please fill in this form to create an account!</p>
		<hr>
        <div class="form-group">
			<div class="row">
				<div id="bootstrap-overides"> <%= f.text_field :name, class: "form-control", name: "name", placeholder: "name", :required => true %> </div>
			</div>        	
        </div>
        <div class="form-group">
        	 <%= f.text_field :email, class: "form-control", name: "email", placeholder: "Email", :required => true %>
        </div>
		<div class="form-group">
            <%= f.text_field :password, class: "form-control", name: "password", placeholder: "Password", :required => true %>
        </div>
		<div class="form-group">
             <%= f.text_field :confirm_password, class: "form-control", name: "confirm_password", placeholder: "Confirm Password", :required => true %>        
		<div class="form-group">
    <br> <br/>
            <%= f.submit "Create User", type: "submit", class: "btn btn-primary btn-lg"%>
        </div>
            <% end %>
	<div class="hint-text">Already have an account? <%= link_to "Login", login_path%></div>
</div>
    